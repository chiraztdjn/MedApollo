<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:backgroundTint="#004CAF50"
    tools:context=".HomeFragment">

    <!-- TODO: Updateblank fragment layout -->



   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginHorizontal="10dp"
       android:layout_marginTop="20mm"
       app:cardCornerRadius="100dp"
       app:cardElevation="30dp"
       android:id="@+id/card"
       >

    <androidx.appcompat.widget.SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:id="@+id/search_view"
        app:queryHint="search a medicine here"

        app:searchIcon="@drawable/outline_search_24"/>

</androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_search"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/card"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@drawable/med_cat"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/pk_img"
                    android:background="@drawable/med_cat"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:layout_margin="20dp"
                    android:src="@drawable/pain"


                    />

                <TextView
                    android:id="@+id/pk"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="@string/pain_killers"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:textColor="@color/black"


                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/immune_img"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/med_cat"
                    android:src="@drawable/immune"


                    />

                <TextView
                    android:id="@+id/cat22"
                    android:layout_width="74dp"
                    android:layout_height="wrap_content"
                    android:text="immune"
                    android:textSize="17dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"


                    />


            </LinearLayout>

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:longClickable="false"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/antibiotic_img"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/med_cat"
                    android:src="@drawable/immune"


                    />

                <TextView
                    android:id="@+id/antibiotics"
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:text="antibotics"
                    android:textSize="17dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"


                    />


            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@drawable/med_cat"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/covid_img"
                    android:background="@drawable/med_cat"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/covid"


                    />

                <TextView
                    android:id="@+id/covid"
                    android:layout_width="74dp"
                    android:layout_height="wrap_content"
                    android:text="covid"
                    android:textSize="17dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"


                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/stomach_img"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/med_cat"
                    android:src="@drawable/immune"


                    />

                <TextView
                    android:id="@+id/stomach"
                    android:layout_width="74dp"
                    android:layout_height="wrap_content"
                    android:text="stomach"
                    android:textSize="17dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"


                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:longClickable="false"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/pressure_img"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/med_cat"
                    android:src="@drawable/immune"


                    />

                <TextView
                    android:id="@+id/pressure"
                    android:layout_width="74dp"
                    android:layout_height="wrap_content"
                    android:text="pressure"
                    android:textSize="17dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"


                    />


            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/immune"
            android:background="@drawable/med_cat"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/neuro_img"
                    android:background="@drawable/med_cat"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/immune"


                    />

                <TextView
                    android:id="@+id/neuro"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="neuro pills"
                    android:textSize="17dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"


                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/mfasel_img"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/med_cat"
                    android:src="@drawable/immune"


                    />

                <TextView
                    android:id="@+id/mfasel"
                    android:layout_width="74dp"
                    android:layout_height="wrap_content"
                    android:text="mfasel"
                    android:textSize="17dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"


                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:longClickable="false"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/others_img"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/med_cat"
                    android:src="@drawable/immune"


                    />

                <TextView
                    android:id="@+id/others"
                    android:layout_width="74dp"
                    android:layout_height="wrap_content"
                    android:text="others"
                    android:textSize="17dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"


                    />


            </LinearLayout>



        </LinearLayout>



    </LinearLayout>



</RelativeLayout>